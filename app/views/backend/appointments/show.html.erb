<div class="panel radius grey">
  <h4>Appointment with <%= @appointment.customer.first_name%> <%= @appointment.customer.last_name %></h4>
  <p>Date: <%= @appointment.appointment_date.strftime("%d/%m/%Y") %></p>
  <p>Time: <%= @appointment.appointment_date.strftime("%H:%M:%S") %></p>
  <p>With: <%= @appointment.user.first_name %> <%= @appointment.user.last_name %></p>
</div>

<%= link_to "Edit", edit_backend_appointment_path(@appointment), class: "button radius" %>
<%= link_to 'Delete', backend_appointment_path(@appointment), method: :delete, data: { confirm: 'Sure?'}, class: "button radius" %>
